---
// src/pages/contact.astro
// spec://pages/contact
import Layout from '../components/layout/Layout.astro';
import Button from '../components/ui/Button.astro';
import MapWidget from '../components/widgets/MapWidget.astro';

// Контактные данные (в будущем можно вынести в JSON)
const contact = {
  name: "Sapojnik",
  address: {
    street: "123 Rue de la République",
    city: "Mulhouse",
    postalCode: "68100",
    country: "France"
  },
  phone: "+33 3 89 45 67 89",
  email: "contact@sapojnik.fr",
  hours: [
    { day: "Lundi - Vendredi", time: "9h00 - 18h00" },
    { day: "Samedi", time: "9h00 - 12h00" },
    { day: "Dimanche", time: "Fermé" }
  ],
  coordinates: {
    lat: 47.7494,
    lng: 7.3394
  }
};
---

<Layout title="Contact" description="Contactez Sapojnik - Cordonnier à Mulhouse. Adresse, téléphone, horaires et formulaire de contact.">
  <!-- Hero -->
  <section class="bg-gradient-to-br from-primary/10 to-transparent py-12 rounded-b-3xl">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-primary mb-4">Nous Contacter</h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Une question ? Un devis ? N'hésitez pas à nous contacter ou à passer à l'atelier.
      </p>
    </div>
  </section>

  <div class="container mx-auto px-4 py-12">
    <div class="grid lg:grid-cols-2 gap-12">
      <!-- Contact Info -->
      <div>
        <h2 class="text-2xl font-bold text-primary mb-6">Informations de Contact</h2>
        
        <!-- Address -->
        <div class="flex items-start gap-4 mb-6">
          <div class="bg-primary/10 p-3 rounded-lg">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </div>
          <div>
            <h3 class="font-semibold text-gray-900">Adresse</h3>
            <p class="text-gray-600">
              {contact.address.street}<br>
              {contact.address.postalCode} {contact.address.city}<br>
              {contact.address.country}
            </p>
          </div>
        </div>

        <!-- Phone -->
        <div class="flex items-start gap-4 mb-6">
          <div class="bg-primary/10 p-3 rounded-lg">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
          </div>
          <div>
            <h3 class="font-semibold text-gray-900">Téléphone</h3>
            <a href={`tel:${contact.phone}`} class="text-primary hover:underline">
              {contact.phone}
            </a>
          </div>
        </div>

        <!-- Email -->
        <div class="flex items-start gap-4 mb-6">
          <div class="bg-primary/10 p-3 rounded-lg">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <div>
            <h3 class="font-semibold text-gray-900">Email</h3>
            <a href={`mailto:${contact.email}`} class="text-primary hover:underline">
              {contact.email}
            </a>
          </div>
        </div>

        <!-- Hours -->
        <div class="bg-gray-50 rounded-lg p-6 mt-8">
          <h3 class="font-bold text-primary mb-4 flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Horaires d'ouverture
          </h3>
          <div class="space-y-2">
            {contact.hours.map((h) => (
              <div class="flex justify-between">
                <span class="text-gray-600">{h.day}</span>
                <span class={`font-medium ${h.time === 'Fermé' ? 'text-red-500' : 'text-gray-900'}`}>
                  {h.time}
                </span>
              </div>
            ))}
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <div>
        <h2 class="text-2xl font-bold text-primary mb-6">Envoyez-nous un message</h2>
        
        <form name="contact" method="POST" data-netlify="true" netlify-honeypot="bot-field" class="space-y-6">
          <input type="hidden" name="form-name" value="contact" />
          <p class="hidden">
            <label>Don't fill this out: <input name="bot-field" /></label>
          </p>
          
          <div>
            <label for="name" class="block text-sm font-medium text-gray-700 mb-2">Nom complet *</label>
            <input 
              type="text" 
              id="name" 
              name="name" 
              required 
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-shadow"
              placeholder="Votre nom"
            />
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email *</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              required 
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-shadow"
              placeholder="votre@email.com"
            />
          </div>

          <div>
            <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">Téléphone</label>
            <input 
              type="tel" 
              id="phone" 
              name="phone" 
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-shadow"
              placeholder="+33 6 12 34 56 78"
            />
          </div>

          <div>
            <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">Sujet *</label>
            <select 
              id="subject" 
              name="subject" 
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-shadow"
            >
              <option value="">Sélectionnez un sujet</option>
              <option value="devis">Demande de devis</option>
              <option value="question">Question générale</option>
              <option value="rdv">Prise de rendez-vous</option>
              <option value="autre">Autre</option>
            </select>
          </div>

          <div>
            <label for="message" class="block text-sm font-medium text-gray-700 mb-2">Message *</label>
            <textarea 
              id="message" 
              name="message" 
              rows="5" 
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-shadow resize-none"
              placeholder="Décrivez votre demande..."
            ></textarea>
          </div>

          <Button type="submit" class="w-full">
            Envoyer le message
          </Button>
        </form>
      </div>
    </div>

    <!-- Map Section -->
    <section class="mt-16">
      <h2 class="text-2xl font-bold text-primary mb-6 text-center">Nous trouver</h2>
      <MapWidget 
        lat={contact.coordinates.lat} 
        lng={contact.coordinates.lng}
        address={`${contact.address.street}, ${contact.address.postalCode} ${contact.address.city}`}
        height="450px"
      />
    </section>
  </div>
</Layout>
